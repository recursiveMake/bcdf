packages:
  yum:
    mod24_ssl: []

files:
  /etc/pki/tls/certs/server.crt:
    mode: "000400"
    owner: root
    group: root
    authentication: "S3Auth"
    source: https://s3.amazonaws.com/bcdf-secure-bucket/cert.pem

  /etc/pki/tls/certs/server.key:
    mode: "000400"
    owner: root
    group: root
    authentication: "S3Auth"
    source: https://s3.amazonaws.com/bcdf-secure-bucket/privkey.pem

  /etc/pki/tls/certs/chain.crt:
    mode: "000400"
    owner: root
    group: root
    authentication: "S3Auth"
    source: https://s3.amazonaws.com/bcdf-secure-bucket/chain.pem

  /etc/httpd/conf.d/wsgi_ssl.conf:
    mode: "000644"
    owner: root
    group: root
    content: |
      LoadModule wsgi_module modules/mod_wsgi.so
      LoadModule ssl_module modules/mod_ssl.so
      WSGIPythonHome /opt/python/run/baselinenv
      WSGISocketPrefix run/wsgi
      WSGIRestrictEmbedded On
      Listen 443
      <VirtualHost *:443>
        SSLEngine On
        Alias /static/ /opt/python/current/app/static/
        <Directory /opt/python/current/app/static/>
          Order allow,deny
          Allow from all
        </Directory>
        WSGIScriptAlias / /opt/python/current/app/application
        <Directory /opt/python/current/app/>
          Require all granted
        </Directory>
        WSGIDaemonProcess wsgi processes=1 threads=15 display-name=%{GROUP} \
        python-home=/opt/python/run/venv/ \
        python-path=/opt/python/current/app user=wsgi group=wsgi \
        home=/opt/python/current/app
        WSGIProcessGroup wsgi
      </VirtualHost>
      Listen 80
      <VirtualHost *:80>
        Redirect / https://www.bovellcancerdiabetesfoundation.org/
      </VirtualHost>
      LogFormat "%h (%{X-Forwarded-For}i) %l %u %t \"%r\" %>s %b \"%{Referer}i\" \"%{User-Agent}i\"" combined

  /etc/httpd/conf.d/ssl_cert.conf:
    mode: "000644"
    owner: root
    group: root
    content: |
      SSLCertificateFile "/etc/pki/tls/certs/server.crt"
      SSLCertificateKeyFile "/etc/pki/tls/certs/server.key"
      SSLCertificateChainFile "/etc/pki/tls/certs/chain.crt"
      SSLCipherSuite        EECDH+AESGCM:EDH+AESGCM:AES256+EECDH:AES256+EDH

  /opt/elasticbeanstalk/hooks/appdeploy/post/99_start_httpd.sh:
    mode: "000755"
    owner: root
    group: root
    content: |
      #!/usr/bin/env bash
      sudo rm -f /etc/httpd/conf.d/ssl.conf /etc/httpd/conf.d/wsgi.conf
      sudo service httpd restart

Resources:
  sslSecurityGroupIngress:
    Type: AWS::EC2::SecurityGroupIngress
    Properties:
      GroupId: {"Fn::GetAtt" : ["AWSEBSecurityGroup", "GroupId"]}
      IpProtocol: tcp
      ToPort: 443
      FromPort: 443
      CidrIp: 0.0.0.0/0

  AWSEBAutoScalingGroup:
    Metadata:
      AWS::CloudFormation::Authentication:
        S3Auth:
          type: "s3"
          buckets: ["bcdf-secure-bucket"]
          roleName:
            "Fn::GetOptionSetting":
              Namespace: "aws:autoscaling:launchconfiguration"
              OptionName: "IamInstanceProfile"
              DefaultValue: "aws-elasticbeanstalk-ec2-role"
